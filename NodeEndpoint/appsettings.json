{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    },
    "Limits": {
      "KeepAliveTimeout": "00:10:00",
      "RequestHeadersTimeout": "00:05:00",
      "MaxConcurrentConnections": 100,
      "MaxRequestBodySize": 1073741824
    }
  },
  "NodeManager": {
    "EnableNodeManager": true,
    "Role": "Hybrid",
    "NodeName": "GeoscientistToolkit_Endpoint",
    "ServerPort": 9876,
    "HostAddress": "localhost",
    "HeartbeatInterval": 30,
    "MaxReconnectAttempts": 5,
    "UseNodesForSimulators": true,
    "UseGpuForJobs": true
  }
}
